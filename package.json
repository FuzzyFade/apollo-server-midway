{
  "name": "apollo-server-midway-repo",
  "version": "1.0.0",
  "private": true,
  "repository": "https://github.com/linbudu599/apollo-server-midway.git",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lint": "ultra -r lint",
    "lint:fix": "ultra -r lint:fix",
