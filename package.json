    "rebuild": "ultra -r --filter 'apollo-server-midway' --topology rebuild"
  },
  "devDependencies": {
    "@types/jest": "^27.0.1",
    "@types/node": "^16.6.1",
    "cross-env": "^7.0.3",
    "jest": "^27.0.6",
    "lerna": "^4.0.0",
    "mwts": "^1.2.2",
    "oao": "^2.0.2",
    "ts-jest": "^27.0.4",
    "ts-node": "^10.2.0",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.3.5",
    "ultra-runner": "^3.10.5"
  }
}
